generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String  @id @default(cuid())
  email       String  @unique
  isActivated Boolean @default(false) @map("is_activated")

  car UserCarData[]

  codeActivate AuthCode?
  createdAt    DateTime  @default(now()) @map("created_at")

  @@map("users")
}

model AuthCode {
  id        String   @id @default(cuid())
  code      String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime @map("expires_at")
  attempts  Int      @default(0)
  userId    String   @unique @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("auth_codes")
}

model UserCarData {
  id           String  @id @default(cuid())
  car          String
  year         String?
  mileage      Int?
  color        String?
  fuelType     String? @map("fuel_type")
  transmission String?

  user   User          @relation(fields: [userId], references: [id])
  userId String        @unique @map("user_id")
  posts  CarPostData[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users_cars_data")
}

model CarPostData {
  id String @id @default(cuid())

  type          String?
  description   String?
  cost          Int?
  userCarData   UserCarData? @relation(fields: [userCarDataId], references: [id])
  userCarDataId String?      @map("user_car_data_id")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("cars_posts_data")
}
